@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Festival Collection";
}
<div style="padding-top: 15px;">
    <div class="panel" id="panelmaingoldview">
        <div class="panel-body">
            <form id="formcollectione">
                <input type="hidden" id="hdnbestsellingdetails" value="" />
                <div id="editbestsellingdetails" style="display:none;background-color:#fff">
                    <div style="height:32px;margin-bottom: 30px;margin-right: 19px">
                        <button id="btn_bestcategory_cancle" class="btn btn-sm pull-right purple" type="button" style="margin-top: 10px;"><i class="fa fa-arrow-left"></i>&nbsp;Back</button>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Title<span style="color:red"> *</span> </label>
                        <div class="col-sm-4">
                            <input class="form-control required" type="text" name="titlename" id="text_besttitlename" placeholder="Title" tabindex="1">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Sub Category<span style="color:red"> *</span> </label>
                        <div class="col-sm-4">
                            <select class="js-example-basic-multiple mutisubcategory" name="subcategory" multiple="multiple" id="text_subcategory" tabindex="3"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Design No.<span style="color:red"> *</span> </label>
                        <div class="col-sm-4">
                            <textarea rows="4" class="form-control" type="text" name="designcode" id="text_designno" placeholder="Design No" tabindex="4"></textarea>
                        </div>
                    </div>
                    <input type="hidden" id="hdnImagePath" value="" />
                    <input type="hidden" id="hdnWebPath" value="" />
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Mobile Image<span style="color:red"> *</span> </label>
                        <div class="col-sm-4">
                            <img src="~/Content/images/upimg.png" class="required" id="ItemimgPreview" style="width: 410px; height: 150px; border:1px solid rgba(0, 0, 0, .15); border-radius:.25rem;" alt="no image" />
                        </div>
                        <div class="col-sm-2">
                            <span class="btn btn-primary btn-file">
                                <input type="file" accept="image/*" name="file" id="inputItemImage" class="file-styled" tabindex="5"><i class="fa fa-plus"></i>&nbsp;Upload File
                            </span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 col-sm-offset-2">
                            <label id="ItemimgError" class="error" style="margin-left:2px; display:none">This field is required.</label>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Web Image<span style="color:red"> *</span> </label>
                        <div class="col-sm-4">
                            <img src="~/Content/images/upimg.png" class="required" id="ItemimgWebPreview" style="width: 410px; height: 150px; border:1px solid rgba(0, 0, 0, .15); border-radius:.25rem;" alt="no image" />
                        </div>
                        <div class="col-sm-2">
                            <span class="btn btn-primary btn-file">
                                <input type="file" accept="image/*" name="file" id="inputItemWebImage" class="file-styled" tabindex="6"><i class="fa fa-plus"></i>&nbsp;Upload File
                            </span>
                        </div>
                    </div>  
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Description.<span style="color:red"> *</span> </label>
                        <div class="col-sm-4">
                            <textarea rows="4" class="form-control required" type="text" name="description" id="text_description" placeholder="Description" tabindex="7"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 col-sm-offset-2">
                            <label id="ItemimgWebError" class="error" style="margin-left:2px; display:none">This field is required.</label>
                        </div>
                    </div>
                    @*<div class="form-group row">
                        <label class="col-sm-2 form-control-label">Display Order<span style="color:red"> *</span> </label>
                        <div class="col-sm-2">
                            <input class="form-control required" type="number" name="displayorder" id="text_displayorder" placeholder="Display order" tabindex="6">
                        </div>
                    </div>*@
                    <div class="form-group row">
                        <label class="col-sm-2 form-control-label">Is Active </label>
                        <div class="col-sm-4">
                            <div class="checkbox" style="margin-top:0px!important">
                                <label class="form-control-label collectionswitch">
                                    <input type="checkbox" data-on="Yes" data-off="No" data-toggle="toggle" id="activeswichonoff" tabindex="7" />
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 col-sm-offset-2" style="padding-bottom: 13px;">
                            <button id="btn_bestcategory_Csave" type="button" class="btn btn-success waves-effect waves-light" tabindex="8">Submit</button>
                        </div>
                    </div>
                </div>

                <div id="viewbestsellingdetails" style="display:block;background-color:#fff">
                    @if (Model.ISADD == 1)
                        {
                        <div class="Pull_Text_Left">
                            <button class="formstylebutton  btn btn-success waves-effect waves-light m-t-10" id="btnAddNewbestselling" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New Festival Collection</button>
                        </div>
                        }
                    <div class="table-responsive" style="padding:12px 0px;">
                        <div class="jqGrid_wrapper" id="jqGrid_bestsellingdetails">
                            <table id="table_list_bestsellingdetails"></table>
                            <div id="pager_list_bestsellingdetails"></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    
<script src="~/Script/B2C/FestivalCollection.js"></script>
    <script id="SubCategoryDropdownList" type="text/x-jsrender">
        <option value="{{>id}}">{{>catsubcategory}}</option>
    </script>

}
