
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Offer Name";
}
<div style="padding-top: 15px;">
    <div class="panel" id="panelmaingoldview">
        <div class="panel-body">
            <form id="formofferdetails">
                <input type="hidden" id="hdnoffername" value="" />
                <div id="editOffers" style="background-color:#fff;display:none">
                    <div style="height:32px;margin-bottom: 30px;margin-right: 19px">
                        <button id="btn_Offers_cancle" class="btn btn-sm pull-right purple" type="button" style="margin-top: 10px;"><i class="fa fa-arrow-left"></i>&nbsp;Back</button>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label class="col-sm-4 form-control-label">Offer Name<span style="color:red"> *</span> </label>
                            <div class="col-sm-8">
                                <input class="form-control required" type="text" name="anouncetitle" id="text_offername" placeholder="Offers Name" tabindex="1">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="col-sm-4 form-control-label">Price Add On Diamond<span style="color:red"> *</span> </label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input class="form-control required" id="txt_priceaddondiamd" name="priceaddondiamond" placeholder="Price Add On Diamond" type="number" tabindex="2" />
                                    <span class="input-group-addon">
                                        <i class="fa fa-percent"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label class="col-sm-4 form-control-label">Category</label>
                            <div class="col-sm-8">
                                <select class="js-example-basic-multiple muticategory" name="category" multiple="multiple" id="text_category" tabindex="3"></select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label class="col-sm-4 form-control-label">Discount On Diamond</label>
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <input class="form-control" id="txt_discountondiamond" name="discountondiamond" placeholder="Discount On Diamond" type="number" tabindex="3" />
                                    <span class="input-group-addon">
                                        <i class="fa fa-percent"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label class="col-sm-4 form-control-label">Sub Category</label>
                            <div class="col-sm-8">
                                <select class="js-example-basic-multiple mutisubcategory" name="subcategory" multiple="multiple" id="text_subcategory" tabindex="4"></select>
                            </div>
                        </div>
                       <div class="col-sm-6">
                           <label class="col-sm-4 form-control-label">Discount On Labour</label>
                           <div class="col-sm-8">
                               <div class="input-group">
                                   <input class="form-control" id="txt_discountonlabour" name="discountonlabour" placeholder="Discount On Labour" type="number" tabindex="4" />
                                   <span class="input-group-addon">
                                       <i class="fa fa-percent"></i>
                                   </span>
                               </div>
                           </div>
                       </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label class="col-sm-4 form-control-label">Design No.</label>
                            <div class="col-sm-8">
                                <textarea rows="4" class="form-control" type="text" name="designcode" id="text_designno" placeholder="Design No" tabindex="5"></textarea>

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div>
                                <label class="col-sm-4 form-control-label">From Date<span style="color:red"> *</span> </label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input class="form-control required" id="txt_fromdate" name="fromdate" placeholder="dd mmm yyyy" type="text" data-provide="datepicker" tabindex="5" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div style="padding-top:5px">
                                <label class="col-sm-4 form-control-label">To Date<span style="color:red"> *</span> </label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input class="form-control required" id="txt_todate" name="todate" placeholder="dd mmm yyyy" type="text" data-provide="datepicker" tabindex="6" />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                       <div class="col-sm-6">
                           <label class="col-sm-4 form-control-label">Terms & Conditions<span style="color:red"> *</span> </label>
                           <div class="col-sm-8">
                               <textarea class="form-control required" rows="4" type="text" name="termsandcondition" id="text_termsandcondition" placeholder="Terms And Condition" tabindex="7"></textarea>
                           </div>
                       </div>
                    </div>
                    <div class="form-group row">
                      <div class="col-sm-6">
                          <div class="col-sm-8 col-sm-offset-4" style="padding-bottom: 13px;">
                              <button id="btn_Offers_Csave" type="button" class="btn btn-success waves-effect waves-light" tabindex="8">Submit</button>
                          </div>
                      </div>
                    </div>
                </div>
                <div id="viewOffers" style="display:block;background-color:#fff">
                    @if (Model.ISADD == 1)
                    {
                        <div class="Pull_Text_Left">
                            <button class="formstylebutton  btn btn-success waves-effect waves-light m-t-10" id="btnAddNewOffers" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New Offers</button>
                        </div>
                    }
                    <div class="table-responsive" style="padding:12px 0px;">
                        <div class="jqGrid_wrapper" id="jqGrid_Offersdetails">
                            <table id="table_list_Offers"></table>
                            <div id="pager_list_Offers"></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Script/B2C/Offers.js"></script>
    <script id="SubCategoryDropdownList" type="text/x-jsrender">
        <option value="{{>id}}">{{>subcategory}}</option>
    </script>
    <script id="CategoryDropdownList" type="text/x-jsrender">
        <option value="{{>categoryid}}">{{>categoryname}}</option>
    </script>
}
