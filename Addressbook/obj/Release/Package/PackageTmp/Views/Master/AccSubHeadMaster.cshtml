@{
    Layout = "~/Views/Shared/_LayoutWithoutMenu.cshtml";
}

<div class="panel panel-flat" id="pnlView">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2 col-md-offset-10 text-right">
                @if (Model.ISADD == 1)
                {
                    <div id="dx_btnAddNew"></div>
                }
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div id="dx_dataGrid"></div>
    </div>
</div>

<form id="frm_AccSubheadMaster" class="form-horizontal" style="display:none;">
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="form-group">
                <label class="col-md-2 control-label addstar">Sub Head Name</label>
                <div class="col-md-2">
                    <div id="dx_SubHeadName"></div>
                </div>

                <label class="col-md-2 control-label addstar">Sub Head Code</label>
                <div class="col-md-2">
                    <div id="dx_SubHeadCode"></div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label addstar">HeadName</label>
                <div class="col-md-2">
                    <div id="dx_txtHeadname"></div>
                </div>

                <label class="col-md-2 control-label addstar">DisplayOrder</label>
                <div class="col-md-2">
                    <div id="dx_numDisplayOrder"></div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label addstar">Is Active</label>
                <div class="col-md-2">
                    <div id="dx_switchIsActive"></div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">Description</label>
                <div class="col-md-5">
                    <div id="dx_txtDescription"></div>
                </div>
            </div>
        </div>
        <div class="panel-footer p-10">
            <div class="row text-center">
                <div id="dx_btnSubmit"></div>
                <div id="dx_btnCancel"></div>
            </div>
        </div>
    </div>
</form>


<div id="dx_popupRecordDelete"></div>

@section Scripts{
    <script src="~/Script/Master/AccSubHeadMaster.js?v=@DateTime.UtcNow"></script>
}