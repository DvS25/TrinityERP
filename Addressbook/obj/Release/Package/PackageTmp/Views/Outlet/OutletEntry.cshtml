    <div id="viewemployeedetails" style="display:block;background-color:#fff">
        @if (Model.ISADD == 1)
            {
            <div class="Pull_Text_Left">
                <button class="formstylebutton btn btn-success waves-effect waves-light m-t-10" id="btnAddNewEmployee" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp;Add New Employee Details</button>
