
@{
    ViewBag.Title = "OutletEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <style>
        .dropdown-menu {
            z-index: 999999999;
        }
    </style>
}
<div>

    <input type="hidden" id="hdnemployeedetails" value="" />
    <div id="editemployeedetails" style="display:none;background-color:#fff">
        @*START*@

        <div style="height:32px;margin-bottom: 10px;margin-right: 19px;padding-top: 19px;">
            <button id="btn_b_cancle" class="btn btn-sm pull-right purple" type="button"><i class="fa fa-arrow-left"></i>&nbsp;Back</button>
        </div>
        <div>
            <div id="Wizard">
                <fieldset style="min-width:1152px;">
                    <legend>Employee Details</legend>
                    <form id="formemployee">
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label class="col-sm-4 form-control-label">Employee Name<span style="color:red"> *</span></label>
                                <div class="col-sm-8">
                                    <div class="row">
                                        <div class="col-sm-3" style="padding-right:5px">
                                            <select class="form-control" id="text_b_salutation">
                                                <option value="Mr." selected="selected">Mr.</option>
                                                <option value="Miss.">Miss.</option>
                                                <option value="Mrs.">Mrs.</option>
                                                <option value="Dr.">Dr.</option>
                                                <option value="Prof.">Prof.</option>
                                                <option value="Shri">Shri</option>
                                                <option value="Smt">Smt</option>
                                            </select>
                                        </div>
                                        <div class="col-sm-9" style="padding-left:0px !important">
                                            <input class="form-control required" type="text" name="empfullname" id="text_fullname" placeholder="Full Name">
                                        </div>
                                    </div>
                                </div>
                                <label class="col-sm-4 form-control-label m-t-5">User Name<span style="color:red"> *</span></label>
                                <div class="col-sm-8 m-t-5">
                                    <input class="form-control required" type="text" name="username" id="text_username" placeholder="Username" autocomplete="off">
                                </div>
                                <label class="col-sm-4 form-control-label m-t-5">User Password<span style="color:red"> *</span></label>
                                <div class="col-sm-8 m-t-5">
                                    <input class="form-control required" type="password" name="Empuserpassword" id="text_Userpassword" placeholder="User Password" autocomplete="off">
                                </div>
                                <div class="col-sm-8 col-sm-offset-4 m-t-5">
                                    <input type="checkbox" id="showpasscheck"><label class="form-control-label" style="padding-left:5px"> Show Password</label>

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="col-sm-3">
                                    <img width="125" height="125" src="@System.Configuration.ConfigurationManager.AppSettings["domainPath"]" id="imgempprofileimg" />
                                    <label id="ItemimgError" class="error" style="margin-left:2px; display:none">This field is required.</label>
                                    <input type="hidden" id="hdnDeletedImg" />
                                </div>

                                <div class="col-sm-6" id="permissionbtndiv">
                                    <label title="Upload image file" class="btn btn-primary" for="btnEmployeeUpload">
                                        <input type="file" accept="jpg,jpeg,png,gif,JPG" name="file" id="btnEmployeeUpload" class="hide" tabindex="1" required>
                                        Upload File
                                        <input type="hidden" id="hdnEmployeeId" value="00000000-0000-0000-0000-000000000000" />
                                    </label>
                                </div>

                            </div>
                        </div>

                        <div class="form-group row">

                            <label class="col-sm-2 form-control-label">Birth Date</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input class="form-control" id="txt_birthdate" name="birthdate" placeholder="dd MMM yyyy" type="text" data-provide="datepicker" />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">Gender </label>
                            <div class="col-sm-4" style="margin-top:6px" id="gender">
                                <input type="radio" id="gendermale" class="ab" name="radiogender" value="Male" checked>
                                <label for="gendermale">Male</label>

                                <input type="radio" id="genderfemale" class="ab" name="radiogender" value="Female">
                                <label for="genderfemale">Female</label>

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">Email<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <input class="form-control required" type="text" name="email" id="txt_Email" placeholder="Enter Email">
                                <label id="lbltxt_b_mobile1" class="error" style="display:none">Please enter a valid number.</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">Mobile No<span style="color:red"> *</span></label>
                            <div class="col-sm-4">
                                <input class="form-control mobilevalidation required" name="mobile" type="text" id="txtmobileNo" placeholder="Mobile No" maxlength="10">
                                <label id="lbltxt_b_mobile1" class="error" style="display:none">Please enter a valid number.</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">Is Active </label>
                            <div class="col-sm-2">
                                <div class="checkbox" style="margin-top:0px!important">
                                    <label class="form-control-label"><input type="checkbox" data-on="Yes" data-off="No" data-toggle="toggle" id="activeonoff" /></label>
                                </div>
                            </div>
                        </div>
