@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "User Activity";
}
<div class="row">
    <div class="col-sm-12">
        <div class="panel" id="GridViewQuotationlist">
            <div class="panel-body" style="padding-bottom: 45px;">
                <div class="quotationlable">
                    <label class="col-sm-1 qutlbl" style="width:10%">Sales Person</label>
                    <div class="col-sm-3" id="textselectparty">
                        <input id="salespersoninput" onclick="BindAutocomplete(this.id)" class="form-control salespersoninput" value="" style="padding-top:0px!important;padding-bottom: 0px!important;" />
                    </div>
                    <label class="col-sm-1 qutlbl">From Date</label>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <input class="form-control" id="txt_fromdate" name="date" placeholder="dd mmm yyyy" type="text" data-provide="datepicker" />
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <label class="col-sm-1 qutlbl">To Date</label>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <input class="form-control" id="txt_todate" name="date" placeholder="dd mmm yyyy" type="text" data-provide="datepicker" />
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <button type="button" id="searchsales" class="btn btn-primary shadow-none addon-btn waves-effect waves-light" style="padding: 8px 1.75rem;margin-left:10px">Search!</button>
                    </div>
                </div>
                <input type="hidden" value="" id="hidesalesid" />
            </div>
            <h4 id="usernorecord" style="display:none">No Record Found</h4>
            <div class="row" id="mapdiv" style="display:none">
                <div id="map" style="height:470px;"></div>
            </div>
        </div>
    </div>
    
</div>

@section Scripts{
@*<script src="https://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>*@
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places&key=AIzaSyAzqCYIhzUTaTaTGA2lTADmA5LsksQuHnQ"></script>
    <script src="~/Script/AppManagement/UserActivity.js"></script>
}
