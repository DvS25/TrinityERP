@{
    Layout = "~/Views/Shared/_LayoutWithoutMenu.cshtml";
    ViewBag.Title = "Catalog List";
}

<div class="panel panel-flat" id="panel_CatalogList">
    <div class="panel-heading">
        <div class="row">
        </div>
    </div>
    <div class="panel-body">
        <div id="dx_gridSelectionList"></div>

    </div>
</div>

<div class="panel panel-flat" id="panel_CatalogItemList" style="display:none;">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-4">
                <div id="dx_txtAutoComplite_PartyList"></div>
            </div>

            <div class="col-md-8 text-right">
                <div id="dx_catalogtool"></div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div id="dx_gridSelectionItemList"></div>
    </div>
</div>

<div class="modal fade" id="ModalSelectionList" tabindex="-1" role="dialog" aria-labelledby="ModalSelectionList" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="FrmShareCatalog">
                    <div class="form-group">
                        <label class="col-md-2 control-label">Type</label>
                        <div class="col-md-10">
                            <div id="dx_CatalogRadioSocial" style="margin-top: 5px;"></div>
                        </div>
                    </div>
                    <div class="form-group CatalogMobileShare">
                        <label class="col-md-2 control-label">Mobile No</label>
                        <div class="col-md-4">
                            <div id="dx_txtCatalogMobileNo"></div>
                        </div>
                    </div>
                    <div class="form-group CatalogMobileShare">
                        <label class="col-md-2 control-label">Message</label>
                        <div class="col-md-10">
                            <div id="dx_txtCatalogShareMessage"></div>
                        </div>
                    </div>
                    <div class="form-group CatalogEmailSharing" style="display:none;">
                        <label class="col-md-2 control-label">Email Id</label>
                        <div class="col-md-10">
                            <div id="dx_txtCatalogSharingEmailId"></div>
                        </div>
                    </div>
                    <div class="form-group CatalogEmailSharing" style="display:none;">
                        <label class="col-md-2 control-label">Subject</label>
                        <div class="col-md-10">
                            <div id="dx_txtCatalogSharingSubject"></div>
                        </div>
                    </div>
                    <div class="form-group CatalogEmailSharing" style="display:none;">
                        <label class="col-md-2 control-label">Email Body</label>
                        <div class="col-md-10">
                            <div id="dx_txtCatalogSharingEmailBody"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-right" style="padding-top: 10px;">
                            <div id="dx_btnCatalogSubmitShare"></div>
                            <div id="dx_btnCancel"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<link href="~/Content/plugin/fancybox/jquery.fancybox-1.3.4.css" rel="stylesheet" />
<input type="hidden" value="@Addressbook.CommonClasses.SessionFacade.UserSession.EMPLOYEE_NAME" id="hdn_UserName" />

@section Scripts{
    <script src="~/Script/Manufacturing/CatalogList.js?V=@DateTime.UtcNow"></script>
}
