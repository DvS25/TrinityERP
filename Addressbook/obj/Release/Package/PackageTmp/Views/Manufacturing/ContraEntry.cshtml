@{
    Layout = "~/Views/Shared/_LayoutWithoutMenu.cshtml";
    ViewBag.Title = "Contra";
}

<style>

    #tbl_DesignDetails tbody {
        counter-reset: rowNumber;
    }

        #tbl_DesignDetails tbody tr {
            counter-increment: rowNumber;
        }

            #tbl_DesignDetails tbody tr td.TableRowNo::before {
                content: counter(rowNumber);
                min-width: 1em;
                margin-right: 0.5em;
            }
</style>

<div class="panel panel-flat" id="pnlView">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2 col-md-offset-10 text-right">
                @if (Model.ISADD == 1)
                {
                <div id="dx_btnAddNew"></div>
                }
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div id="dx_dataGrid"></div>
    </div>
</div>


<form id="frm_ContraEntry" class="form-horizontal" style="display:none">
    <div class="panel panel-flat">
        <div class="panel-body">

            <div class="col-md-8" style="margin-bottom: 20px" ;>
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-md-2 control-label addstar">Payment Date</label>
                        <div class="col-md-5">
                            <div id="dx_txtPaymentDate"></div>
                        </div>
                        <label class="col-md-2 control-label">Voucher No</label>
                        <div class="col-md-3">
                            <div id="dx_VchrNo"></div>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label addstar">Credit Acc</label>
                        <div class="col-md-5">
                            <div class="input-group">
                                <div id="dx_txtcreditacc"></div>
                                <span class="input-group-addon" id="btnAddSelectionList">0.00</span>
                                <span class="input-group-addon" style="width: 49px;" id="spanCashBankCurr"></span>
                            </div>
                        </div>
                        <label class="col-md-2 control-label addstar">Amount</label>
                        <div class="col-md-3">
                            <div id="dx_txtamt"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label addstar" id="place">Debit Acct</label>

                        <div class="col-md-5">
                            <div class="input-group">
                                <div id="dx_txtdebitacc"></div>
                                <span class="input-group-addon" id="btnAddSelectionRecieveList">0.00</span>
                                <span class="input-group-addon" style="width: 49px;" id="spanCurrencyName"></span>
                            </div>
                        </div>
                        <label class="col-md-2 control-label">Exchange Rate</label>
                        <div class="col-md-3">
                            <div id="dx_txtExchangeRate"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-9 control-label">Total Amount In RS.</label>
                        <div class="col-lg-3">
                            <div id="txtTotalAmountInRs"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12" style="margin-top:5px; margin-bottom:5px">
                <div class="form-group">
                    <div class="col-lg-8">
                        <label class="col-md-2 control-label addstar">Creditors</label>
                        <div class="col-md-4">
                            <div id="dx_ddlCreditors"></div>
                        </div>
                        <label class="col-md-2 control-label addstar">Debitors</label>
                        <div class="col-md-4">
                            <div id="dx_ddlDebitors"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <table class="table table-bordered" id="tbl_DesignDetails" style="margin-bottom:10px;">
                        <thead style="background-color: #fafafa;">
                            <tr>
                                <th width="5%">No.</th>
                                <th width="10%">Item Name</th>
                                <th width="10%">Type</th>
                                <th width="10%">HSNCode</th>
                                <th width="10%">Unit</th>
                                <th width="10%">Amount</th>
                                <th width="10%">Tax Amount</th>
                                <th width="10%">Total Amount</th>
                                <th width="10%">PaymentMode</th>
                                <th width="5%"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot style="background-color: #fafafa;">
                            <tr>
                                <td colspan="5">
                                    <div class="col-md-3">
                                        <a href="javascript:void(0);" style="text-decoration:underline;" id="lnk_AddNewRow"><i class="fa fa-plus"></i>&nbsp;Add New Row</a>
                                    </div>
                                <th id="tfoot_Amt" style="text-align:right"></th>
                                <th id="tfoot_TaxAmt" style="text-align:right"></th>
                                <th id="tfoot_TotalAmt" style="text-align:right"></th>
                                <th colspan="2"></th>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group" style="">
                        <label class="col-lg-2 control-label">Remarks</label>
                        <div class="col-lg-10">
                            <div id="dx_txtRemarks"></div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6" style="margin-top:15px">

                    <div class="form-group">
                        <label class="control-label col-lg-3 col-lg-offset-7">Auto Debit Amt</label>
                        <div class="col-lg-2">
                            <div id="txtAutoDebit"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-3 col-lg-offset-2"></label>
                        <div class="col-lg-2">
                            <div id=""></div>
                        </div>
                        <label class="control-label col-lg-3">Taxable Amount</label>
                        <div class="col-lg-2">
                            <div id="txtTaxableAmount"></div>
                        </div>
                    </div>
                    <div class="form-group" id="div_AmountWithTax">
                        <label class="control-label col-lg-3 col-lg-offset-7">Total Charges</label>
                        <div class="col-lg-2">
                            <div id="txtAmountWithTax"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3 col-lg-offset-7">Final Amount</label>
                        <div class="col-lg-2">
                            <div id="txtFinalAmount"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="panel-footer p-10">
            <div class="row text-center">

                <div id="dx_btnSubmit"></div>
                <div id="dx_btnCancel"></div>
            </div>
        </div>
    </div>
</form>

<div id="dx_popupRecordDelete"></div>
<div class="modal fade" id="Modal_UpdateItems" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <form class="form-horizontal" id="frm_UpdateItems" method="get">
                    <fieldset style="margin-bottom: 10px;">
                        <legend>Metal</legend>
                        <div class="form-group">
                            <label class="col-md-1 control-label">Code</label>
                            <div class="col-md-3">
                                <div id="dx_ddlMRmCode"></div>
                            </div>

                            <label class="col-md-1 control-label">Color</label>
                            <div class="col-md-3">
                                <div id="dx_ddlMColor"></div>
                            </div>

                            <label class="col-md-1 control-label">Rate</label>
                            <div class="col-md-3">
                                <div id="dx_txtMRate"></div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<link href="~/Content/plugin/fancybox/jquery.fancybox-1.3.4.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Content/plugin/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
    <script src="~/Script/Manufacturing/Contra.js?V=@DateTime.UtcNow"></script>
}
